#####################################################################################

[fitsconfig]

BIN_PATH = /home/afa/n1fits/bin/
DATA_PATH = /home/afa/n1fits/mission/
VERSION = 4.00
SW_REF = https://github.com/jasonfrowe/neossat

# |----------- General Cleaning ---------------|
# |Changes that do not affect the final images.|
# |This parameters alter terminal output and   |
# |speed of pipeline execution.                |
# |Choose either multiprocessing or            |
# |hyperthreading, not both.                   |
# |--------------------------------------------|
PROGRESS_BAR = True
# Multiprocessing
MPROCESSING = True
# Hyperthreading
HTHREADING = False

# |------------ Image Archiving ---------------|
# |Compresses output files in 'fits.gz' format.|
# |Primarily stores archives of older portions |
# |of both dark library and image library      |
# |--------------------------------------------|
COMPRESS = True
COMPRESS_RAW = True

#####################################################################################

#####################################################################################

[darkprocess]

# Whether Master Darks should be saved to file
SAVE_MDARK = False

# Minimum and Maximum darks required to process a "_cord" file
MIN_DARKS = 10
MAX_DARKS = 50

# How many days to look back for dark collection
MAX_DARK_SPAN = 10

# |---------- "_cord" Reprocessing ------------|
# |Change the limits of how far back (in days) | 
# |to queue up older lights into the "_cord"   |   
# |production pool. New darks will allow       |
# |already processed "_cord" files to be       |
# |reprocessed. Meanwhile, old darks that were |
# |never processed due to insufficient darks,  |
# |can now be processed for the first time.    |
# |--------------------------------------------|
# How many days to look back for light reprocessing during new dark detection
DAY_RANGE_LIMIT = 5

# How many days to look back for reprocessing lights with no available darks
NODARKS_SPAN = 10

# |-------- South Atlantic Anomaly ------------|
# |SAA definition used for discarding any darks| 
# |that land within such a region. Area formed |
# |is a rectangle defined by the northwest     |   
# |corner coordinate boundary and the southeast|
# |corner coordinate boundary.                 |
# |FORMAT : degrees --> [latitude, longitude]  |
# |--------------------------------------------|
SAA_NW_BOUND = [3.0, -90.0]
SAA_SE_BOUND = [-48.0, 25.0]

# |------------ Dark Binning ------------------|
# |Collected darks are sorted using dynamically| 
# |stretched temperature bins in ascending     |
# |order according to degrees kelvin. The width|
# |of each interval bin is defined by how many |
# |darks can fit within a "standard width".    |
# |If too many, the width is reduced. If too   |
# |few, the width is increased.                       
# |--------------------------------------------|
# Low end of temperature binning (MIN POTENTIAL, Kelvin)
TEMP_DARK_LOW = 235.0
# High end of temperature binning (MAX POTENTIAL, Kelvin)
TEMP_DARK_HIGH = 255.0
# The temperature width of an ideal, 'standard' bin in degrees kelvin
STANDARD_DARK_BIN_WIDTH = 1.0

# |---------------- Dark Mode -----------------|
# |Defines which method will be used to scale  |   
# |the masterdark to the science image.        |
# |OPTIONS: zscale, logspace, range, npbin.    |
# |--------------------------------------------|

DARK_MODE = logspace

# |-------------- Pixel Fraction --------------|
# |Defines the minimum percentage of good      |   
# |pixels required to scale the dark image.    |
# |--------------------------------------------|

PIX_FRAC = 0.1

#####################################################################################

#####################################################################################

[scaling]

# |------------- Data Scaling -----------------|
# |Data arrays representing the various image  | 
# |products can be scaled according to         |
# |desired science data percision and          |
# |file sizes.                                 |
# |--------------------------------------------|

# Options: float64, float32, float16, int16, int32, int64
SCALE_FACTOR_CORD = float32
SCALE_FACTOR_COR = float32
SCALE_FACTOR_DARKS = float32

SCALE_COR = True
SCALE_DARKS = True

#####################################################################################

#####################################################################################

[memmap]

# |- Memmap Operating System Error Identifier -|
# |Defines specific operating systems which    |   
# |require the memmap parameter within         |
# |fits.open() be set to False for             | 
# |add_cord_header() in order to bypass        |
# |OSError: [Errno 5] Input/output error.      |
# |FORMAT: Add new error causing OS's as a     |
# |comma seperated list --> OS1,OS2,OS3        |
# |--------------------------------------------|

MEMMAP_ERROR_OS = microsoft-standard-WSL2

#####################################################################################
